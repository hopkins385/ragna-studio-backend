{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "generateOptions": {
    "baseDir": "modules"
  },
  "compilerOptions": {
    "builder": "swc",
    "typeCheck": false,
    "deleteOutDir": true,
    "watchAssets": true,
    "plugins": [
      "@nestjs/swagger"
    ],
    "assets": [
      {
        "include": "../bin",
        "outDir": "dist/bin"
      },
      {
        "include": "../prisma/migrations",
        "outDir": "dist/prisma"
      },
      {
        "include": "../prisma/schema.prisma",
        "outDir": "dist/prisma"
      },
      {
        "include": "modules/mail/templates",
        "outDir": "dist"
      }
    ]
  }
}